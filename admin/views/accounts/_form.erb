<div class="row">
    <%=hidden_field_tag :from, :value=>@from%>
    <% if @from == 'new' or @from == 'edit'%>
    <div class="col-xs-12 form-group-row">
        <label>选择角色*</label>
        <%= f.select :role_id, :options => Role.where(role_type: "account").map{|r| [r.name, r.id]}.unshift([nil,nil]), :class => 'form-control' %>
    </div>
    <div class="col-xs-12 form-group-row">
        <label>姓名*</label>
        <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <div class="col-xs-12 form-group-row">
        <label>Email*</label>
        <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <% end %>
    <% if @from == 'new' or @from == 'edit_password'%>
    <div class="col-xs-12 form-group-row">
        <label>密码*</label>
        <%= f.password_field :password, :class => 'form-control input-xlarge input-with-feedback' %>
    </div>
    <div class="col-xs-12 form-group-row">
        <label>密码确认*</label>
        <%= f.password_field :password_confirmation, :class => 'form-control input-xlarge input-with-feedback' %>
    </div>
    <% end %>
</div>
<div class="form-group-row-btn">
    <%= link_to '返回', url(:accounts, :index), :class => 'btn btn-back' %>
    <%= f.submit '提交', :class => 'btn btn-submit' %>
</div>
