<div class="card">
    <div class="card-title">
        <h4 class="underline">分销订单</h4>
    </div>

    <!-- 表格主体内容 -->
    <table class="table table-condensed table-striped table-bordered-y">
        <thead>
        <tr>
            <th style="width: 14%;">订单号</th>
            <th style="width: 13%;">分销角色</th>
            <th style="width: 13%;">参与分销金额</th>
            <th style="width: 13%;">分销比例</th>
            <th style="width: 13%;">佣金</th>
            <th style="width: 13%;">订单支付时间</th>
            <th style="width: 13%;">订单完成时间</th>
        </tr>
        </thead>
        <tbody>
        <% @dist_orders.each do |dist_order| %>
            <tr>
                <td><%=dist_order.order.order_no%></td>
                <td><%=dist_order.dist_type%></td>
                <td>￥<%=dist_order.pay_amount%></td>
                <td><%=dist_order.dist_percent%>%</td>
                <td>￥<%=dist_order.commission%></td>
                <td><%=dist_order.pay_time.try{|pt| pt.strftime('%F')}%></td>
                <td><%=dist_order.complete_time.try{|pt| pt.strftime('%F')}%></td>
            </tr>
          <% end %>
        </tbody>
    </table>
    <div class="pagination">
      <%= will_paginate @dist_orders %>
    </div>
    <%= link_to '返回', 'javascript:history.go(-1);', :class => 'btn btn-default' %>
</div>
