<div class="card">
    <div class="review-tab-pro-inner">
      <ul id="myTab3" class="tab-review-design">
          <li class="active">
            <div class="card-title">
              <h4 class="underline"><i class="fa fa-pencil" aria-hidden="true"></i>创建营销活动</h4>
            </div>
          </li>
      </ul>
        <div id="myTabContent" class="tab-content custom-product-edit">
            <% form_for @activity, url(:activities, :create), :class=>"form-horizontal", :method => 'post', multipart: true do |f| %>
            <div class="product-tab-list tab-pane fade active in">
              <%=f.hidden_field "merchant_id" %>

              <div class="form-group-inner">
                  <div class="row">
                      <div class="col-lg-2 col-md-12 col-sm-12 col-xs-12">
                          <label class="login2 pull-right pull-right-pro">活动海报*</label>
                      </div>
                      <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
                          <div class="image-preview">
                              <div class="img-upload">
                                  <div class="img-upload-mask">
                                      <%=f.file_field(:image, :class => "inbox-file")%>
                                  </div>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>

              <div class="form-group-inner">
                  <div class="login-btn-inner">
                      <div class="row">
                          <div class="col-lg-2"></div>
                          <div class="col-lg-9">
                              <div class="login-horizental cancel-wp pull-left">
                                  <a href="<%=url(:activities, :index)%>" class="btn btn-warning" style="border-radius: 0px;background-color: #ccc;border-color: #ccc;">返回</a>
                                  <%=f.submit "提交", :class => "btn btn-sm btn-primary login-submit-cs"%>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
            </div>

            <% end %>
        </div>
    </div>
</div>
