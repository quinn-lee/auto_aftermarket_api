<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="product-status-wrap">
        <h4>目录列表</h4>
        <div class="add-product">
            <a href="<%=url(:categories, :new)%>">新增目录</a>
        </div>
        <table>
            <tr>
                <th style="width: 12%;">一级目录</th>
                <th style="width: 12%;">二级目录</th>
                <th style="width: 33%;">品牌</th>
                <th style="width: 33%;">属性</th>
                <th style="width: 8%;"></th>
            </tr>
            <% @categories.where(parent_id: nil).each do |category| %>
              <tr>
                  <td><a class="toggle-button" data-id="<%=category.id%>" href="javascript:void(0)"><%= category.name%></a></td>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td><a href="<%=url(:categories, :new, :parent_id =>category.id) %>" title="新增二级目录" class="pd-setting-ed" style="margin-right: 5px;"><i class="fa fa-pencil" aria-hidden="true"></i></a></td>
              </tr>
              <% @categories.where(parent_id: category.id).each do |sub_category|%>
              <tr class="sub_categories sub_<%=category.id%>">
                  <td></td>
                  <td><%= sub_category.name%></td>
                  <td>
                    <% sub_category.brands.each do |brand|%>
                      <button class="pd-setting"><%= brand.name%></button>
                    <% end %>
                  </td>
                  <td>
                    <div class="modal-area-button">
                    <% sub_category.t_attributes.each do |attr|%>
                      <a class="Primary mg-b-10" href="#" data-toggle="modal" data-target="#showAttribute<%=attr.id%>"><%=attr.name%></a>
                    <% end %>
                    </div>
                    <% sub_category.t_attributes.each do |attr|%>
                      <div id="showAttribute<%=attr.id%>" class="modal modal-adminpro-general default-popup-PrimaryModal fade" role="dialog">
                          <div class="modal-dialog">
                              <div class="modal-content">
                                  <div class="modal-close-area modal-close-df">
                                      <a class="close" data-dismiss="modal" href="#"><i class="fa fa-close"></i></a>
                                  </div>
                                  <div class="modal-body">
                                    
                                  </div>
                                  <div class="modal-footer">
                                      <a data-dismiss="modal" href="#">Cancel</a>
                                      <a href="#">Process</a>
                                  </div>
                              </div>
                          </div>
                      </div>
                    <% end %>

                  </td>
                  <td><a href="<%=url(:categories, :new_attribute, :id =>sub_category.id) %>" title="添加属性" class="pd-setting-ed" style="margin-right: 5px;"><i class="fa fa-file sub-icon-mg" aria-hidden="true"></i></a></td>
              </tr>
              <% end %>
            <% end %>

        </table>

    </div>
</div>
<style>
.modal-area-button a{
	padding: 10px 10px;
    text-decoration: none;
    color: #fff;
    position: relative;
    z-index: 11;
    font-size: 14px;
	display:inline-block;
  text-align: center;
}

.modal-area-button a.Primary:before{
	width:100%;
}
.modal-area-button a.Information:before{
	width:100%;
}
.modal-area-button a.Warning:before{
	width:100%;
}
.modal-area-button a.Danger:before{
	width:100%;
}
.modal-area-button a.Primary:after{
	width:100%;
}
.modal-area-button a.Information:after{
	width:100%;
}
.modal-area-button a.Warning:after{
	width:100%;
}
.modal-area-button a.Danger:after{
	width:100%;
}
.product-status-wrap .pd-setting{
  margin-bottom: 5px;
}
</style>
