<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="review-tab-pro-inner">
        <ul id="myTab3" class="tab-review-design">
            <li class="active"><a disable='true'><i class="fa fa-pencil" aria-hidden="true"></i> 新增品牌</a></li>
        </ul>
        <div id="myTabContent" class="tab-content custom-product-edit">
            <% form_tag url(:categories, :create_brands, :id=>@category.id), :class=>"form-horizontal", :method => 'post' do %>
            <div class="product-tab-list tab-pane fade active in">
              <div class="form-group-inner">
                  <div class="row">
                      <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
                          <label class="login2 pull-right pull-right-pro">品牌名称*</label>
                      </div>
                      <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                          <div class="form-select-list">
                            <%=text_field_tag(:brands, :value =>params[:brands], :class => "form-control", placeholder: "多个品牌以三竖线('|||')分割")%>
                          </div>
                      </div>
                  </div>
              </div>

              <div class="form-group-inner">
                  <div class="login-btn-inner">
                      <div class="row">
                          <div class="col-lg-3"></div>
                          <div class="col-lg-9">
                              <div class="login-horizental cancel-wp pull-left">
                                  <a href="<%=url(:categories, :index)%>" class="btn btn-warning" style="border-radius: 0px;background-color: #ccc;border-color: #ccc;">返回</a>
                                  <button class="btn btn-sm btn-primary login-submit-cs" type="submit" style="border-radius: 0px;height: 34px;">新增</button>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
            </div>

            <% end %>
        </div>
    </div>
</div>
