<div class="card">
    <div class="card-title">
        <h4 class="underline">填写优惠券信息</h4>
    </div>

    <% form_for @coupon, url(:coupons, :create), :method => 'post' do |f| %>
        <%=f.hidden_field "merchant_id" %>
        <div class="row">
            <div class="col-xs-12 form-group-row">
                <label>优惠券类型*</label>
                <%=f.select(:ctype, :options => Coupon::CTYPE.invert.to_a, :class => "form-control custom-select-value")%>
            </div>
            <div class="col-xs-12 form-group-row">
                <label style="height: 18px;">标题*<span style="color: #EC7063;">(比如：新人专用券)</span></label>
                <%= f.text_field :title, :class => 'form-control' %>
            </div>
            <div class="col-xs-12 form-group-row">
                <label style="height: 18px;">描述*<span style="color: #EC7063;">(比如：满5000元可用)</span></label>
                <%= f.text_field :remarks, :class => 'form-control' %>
            </div>
            <div class="col-xs-12 form-group-row">
                <label>优惠券有效时间*</label>
                <div class="input-group" style="width: 75%">
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    <%=f.text_field(:end_time, :class => "form-control datetimePicker")%>
                </div>
            </div>
            <div class="col-xs-12 form-group-row">
                <label style="height: 18px;">优惠券金额<span style="color: #EC7063;">(满减券时，该项必须填写)</span></label>
                <div class="input-group" style="width: 75%">
                    <span class="input-group-addon">￥</span>
                    <%=f.text_field(:money, :class => "form-control")%>
                </div>
            </div>
            <div class="col-xs-12 form-group-row">
                <label style="height: 18px;">优惠券使用条件，订单金额大于<span style="color: #EC7063;">(满减券时，该项必须填写)</span></label>
                <div class="input-group" style="width: 75%">
                    <span class="input-group-addon">￥</span>
                    <%=f.text_field(:full_money, :class => "form-control")%>
                </div>
            </div>
            <div class="col-xs-12 form-group-row">
                <label style="height: 18px;">折扣<span style="color: #EC7063;">(折扣券时，该项必须填写，0-10之间的数值)</span></label>
                <%= f.text_field :discount, :class => 'form-control' %>
            </div>
            <div class="col-xs-12 form-group-row">
                <label>最大领取数</label>
                <%= f.text_field :max_num, :class => 'form-control' %>
            </div>
        </div>
        <div class="form-group-row-btn">
            <%= link_to '返回', url(:coupons, :index), :class => 'btn btn-back' %>
            <%=f.submit '提交', :class => 'btn btn-submit' %>
        </div>
    <% end %>
</div>