<div class="card">
    <div class="card-title">
        <h4 class="underline">表单基础样式 1 (.form-group)</h4>
    </div>

    <div class="row">
        <div class="col-xs-6 form-group">
            <label>文本</label>
            <%= text_field_tag :text, :value => nil, :class => 'form-control' %>
        </div>
        <div class="col-xs-6 form-group">
            <label>选择栏</label>
            <%= select_tag :select, :options => %w[option1 option2], :class => 'form-control' %>
        </div>
        <div class="col-xs-6 form-group">
            <label>文件</label>
            <%= file_field_tag :file, :class => 'form-control' %>
        </div>
        <div class="col-xs-6 form-group">
            <label>图片上传+预览</label>
            <div class="image-preview">
                <div class="img-upload">
                    <div class="img-upload-mask">
                        <%= file_field_tag :file, :multiple => true, :class => 'inbox-file' %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group-btn">
        <button type="button" class="btn btn-submit">提交</button>
    </div>
</div>

