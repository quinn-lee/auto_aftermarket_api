<div class="card">
    <div class="card-title">
        <h4 class="underline">分销设置</h4>
    </div>

    <% form_for @dist_setting, url(:dist_settings, :update, :id => @dist_setting.id), :method => 'post' do |f| %>
        <%=f.hidden_field "merchant_id" %>
        <div class="row">
            <div class="col-xs-12 form-group-row">
                <label>是否开启分销*</label>
                <%=f.select(:dist_switch, :options => [['是',true],['否','false']], :class => "form-control custom-select-value")%>
            </div>
            <div class="col-xs-12 form-group-row">
                <label style="height: 36px;">申请成为分销员成交金额限制*<span style="color: #EC7063;font-size: 12px;">(成交金额与发展客户数满足一个条件，客户就可申请成为分销员)</span></label>
                <%= f.text_field :amount_limit, :class => 'form-control' %>
            </div>
            <div class="col-xs-12 form-group-row">
                <label>申请成为分销员发展客户数限制*</label>
                <%= f.text_field :number_limit, :class => 'form-control' %>
            </div>
            <div class="col-xs-12 form-group-row">
                <label style="height: 18px;">客户介绍人(销售员)佣金比例*<span style="color: #EC7063;font-size: 12px;">(公司专职销售)</span></label>
                <%= f.text_field :sales_percent, :class => 'form-control' %>
            </div>
            <div class="col-xs-12 form-group-row">
                <label style="height: 18px;">客户介绍人(分销员)佣金比例*<span style="color: #EC7063;font-size: 12px;">(客户申请，审核通过后成为分销员)</span></label>
                <%= f.text_field :dist_percent, :class => 'form-control' %>
            </div>
            <div class="col-xs-12 form-group-row">
                <label style="height: 18px;">商品促销人 佣金比例*<span style="color: #EC7063;font-size: 12px;">(如果商品设置了分销佣金比例，则以商品设置的为准)</span></label>
                <%= f.text_field :spu_percent, :class => 'form-control' %>
            </div>
            <div class="col-xs-12 form-group-row">
                <label style="height: 18px;">服务资讯人 佣金比例*<span style="color: #EC7063;font-size: 12px;">(客户专属客服 的佣金比例)</span></label>
                <%= f.text_field :info_service_percent, :class => 'form-control' %>
            </div>
        </div>
        <div class="form-group-row-btn">
            <%=f.submit '提交', :class => 'btn btn-submit' %>
        </div>
    <% end %>
</div>
