<div class="card">
    <div class="card-title">
        <h4 class="underline">现金流量明细表</h4>
    </div>

    <table class="table table-condensed table-striped table-bordered-y">
        <thead>
        <tr>
            <th>科目</th>
            <th>订单号/合同号</th>
            <th>日期</th>
            <th>金额</th>
        </tr>
        </thead>
        <tbody>
            <% @cash_flows.each do |cash_flow| %>
            <tr>
                <td><%= CashFlow::SUBJECT[cash_flow.subject] %></td>
                <td><%= cash_flow.show_no %></td>
                <td><%= cash_flow.transaction_date.try{|td| td.strftime("%F")} %></td>
                <td>￥<%= cash_flow.amount %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <%= will_paginate @cash_flows %>
</div>
