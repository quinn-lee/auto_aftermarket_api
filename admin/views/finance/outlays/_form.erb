<div class="row">
    <div class="col-xs-12 form-group-row">
        <label>客户名称<span class="text-red">*</span></label>
        <%= f.text_field :client_name, :required => true, :class => 'form-control' %>
    </div>
    <div class="col-xs-12 form-group-row">
        <label>联系电话<span class="text-red">*</span></label>
        <div class="input-group col-xs-9">
            <span class="input-group-addon"><i class="fa fa-phone"></i></span>
            <%= f.text_field :client_phone, :required => true, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-xs-12 form-group-row">
        <label>合同编号</label>
        <%= f.text_field :contract_no, :class => 'form-control' %>
    </div>
    <div class="col-xs-12 form-group-row">
        <label>合同日期</label>
        <div class="input-group col-xs-9">
            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
            <%= f.text_field :contract_date, :class => 'form-control datePicker' %>
        </div>
    </div>
    <div class="col-xs-12 form-group-row">
        <label>科目</label>
        <%= f.text_field :subject, :class => 'form-control' %>
    </div>
    <div class="col-xs-12 form-group-row">
        <label>合同金额<span class="text-red">*</span></label>
        <div class="input-group col-xs-9">
            <span class="input-group-addon"><i class="fa fa-cny"></i></span>
            <%= f.number_field :contract_amount, :require => true, :min => 0, :step => 0.01, :class => 'form-control' %>
        </div>
    </div>
    <div class="col-xs-12 form-group-row">
        <label>应收日期<span class="text-red">*</span></label>
        <div class="input-group col-xs-9">
            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
            <%= f.text_field :due_date, :required => true, :class => 'form-control datePicker' %>
        </div>
    </div>
    <div class="col-xs-12 form-group-row">
        <label>备注</label>
        <%= f.text_area :remark, :rows => 3, :class => 'form-control' %>
    </div>
</div>