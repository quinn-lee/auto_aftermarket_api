<div class="card">
    <div class="card-title">
        <h4 class="underline">修改拼团信息</h4>
    </div>

    <% form_for @group, url(:groups, :update, :id => @group.id), :method => 'post' do |f| %>
        <%=f.hidden_field "t_sku_id" %>
        <%=f.hidden_field "merchant_id" %>
        <div class="row">
            <div class="col-xs-12 form-group-row">
                <label style="height: 18px;">拼团标题*<span style="color: #EC7063;">(拼团描述，将展示在拼团商品页)</span></label>
                <%= f.text_field :title, :class => 'form-control' %>
            </div>
            <div class="col-xs-12 form-group-row">
                <label>拼团描述*</label>
                <%= f.text_field :detail, :class => 'form-control' %>
            </div>
            <div class="col-xs-12 form-group-row">
                <label>开始时间*</label>
                <div class="input-group" style="width: 75%">
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    <%=f.text_field(:begin_time, :class => "form-control datetimePicker")%>
                </div>
            </div>
            <div class="col-xs-12 form-group-row">
                <label>结束时间*</label>
                <div class="input-group" style="width: 75%">
                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                    <%=f.text_field(:end_time, :class => "form-control datetimePicker")%>
                </div>
            </div>
            <div class="col-xs-12 form-group-row">
                <label style="height: 18px;">团购价*<span style="color: #EC7063;">(商品原价：￥<%=@group.t_sku.price%>)</span></label>
                <%= f.text_field :group_price, :class => 'form-control' %>
            </div>
            <div class="col-xs-12 form-group-row">
                <label>最小成团人数*</label>
                <%= f.text_field :min_num, :class => 'form-control' %>
            </div>
            <div class="col-xs-12 form-group-row">
                <label style="height: 18px;">最大成团人数*<span style="color: #EC7063;">(商品当前库存：<%=@group.t_sku.stock_num%>)</span></label>
                <%= f.text_field :max_num, :class => 'form-control' %>
            </div>
        </div>
        <div class="form-group-row-btn">
            <%= link_to '返回', url(:groups, :index), :class => 'btn btn-back' %>
            <%=f.submit '提交', :class => 'btn btn-submit' %>
        </div>
    <% end %>
</div>