<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="product-status-wrap">
        <h4><%=@group.title%></h4>
        <table>
            <tr>
                <th style="width: 25%;">商品</th>
                <th style="width: 20%;">订单号</th>
                <th style="width: 15%;">购买时间</th>
                <th style="width: 15%;">金额</th>
                <th style="width: 15%;">状态</th>
            </tr>
            <% @group.group_buyers.each do |buyer| %>
            <tr>
                <td><%= @group.t_sku.title%></td>
                <td><%= buyer.order.order_no %></td>
                <td><%= buyer.pay_time.try{|pt| pt.strftime("%F %T")} %></td>
                <td>
                    ￥<%= buyer.group_amount%>
                </td>
                <td><%= GroupBuyer::STATUS[buyer.status.to_s] %></td>
            </tr>
            <% end %>

        </table>
        <div class="form-group-inner">
            <div class="login-btn-inner">
                <div class="row">
                    <div class="col-lg-3"></div>
                    <div class="col-lg-9">
                        <div class="login-horizental cancel-wp pull-left">
                            <a href="<%=url(:groups, :index)%>" class="btn btn-warning" style="border-radius: 0px;background-color: #ccc;border-color: #ccc;">返回</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
