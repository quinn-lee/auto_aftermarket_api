<div class="card">
    <div class="card-title">
        <h4 class="underline">话题列表</h4>
    </div>
    <div class="card-toolbar">
        <div class="btn-group btn-group-sm">
            <button class="btn btn-default" type="button" data-toggle="modal" data-target="#searchModal">
                <i class="fa fa-plus"></i>新增话题
            </button>
        </div>
    </div>
    <!-- 表格主体内容 -->
    <table class="table table-condensed table-striped table-bordered-y">
        <thead>
        <tr>
            <th>话题</th>
        </tr>
        </thead>
        <tbody>
        <tr>
                <td>
                    <div class="modal-area-button">
                    <% @topics.each do |topic|%>
                      <a class="Primary mg-b-10" href="#" data-toggle="modal" data-target="#editTopic<%=topic.id%>"><%=topic.title%></a>
                      <div class="modal modal-custom fade" id="editTopic<%=topic.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h4 class="modal-title underline">修改话题</h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                </div>
                                <div class="modal-body">
                                    <% form_for topic, url(:questions, :update_topic, topic_id: topic.id), :method => 'post' do |f| %>
                                        <div class="row">
                                            <div class="col-xs-6 form-group">
                                                <label>话题名称</label>
                                                <%=f.text_field(:title, :class => "form-control")%>
                                            </div>
                                        </div>
                                        <div align="right">
                                            <button type="button" class="btn btn-back" data-dismiss="modal">关闭</button>
                                            <button type="submit" class="btn btn-submit">提交</button>
                                        </div>
                                    <%end%>
                                </div>
                            </div>
                        </div>
                    </div>
                  <% end %>
                </div>
              </td>
          </tr>
        </tbody>
    </table>
</div>

<div class="modal modal-custom fade" id="searchModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title underline">新增话题</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <% form_for Topic.new, url(:questions, :create_topic), :method => 'post' do |f| %>
                    <div class="row">
                        <div class="col-xs-6 form-group">
                            <label>话题名称</label>
                            <%=f.text_field(:title, :class => "form-control")%>
                        </div>
                    </div>

                    <div align="right">
                        <button type="button" class="btn btn-back" data-dismiss="modal">关闭</button>
                        <button type="submit" class="btn btn-submit">提交</button>
                    </div>
                <%end%>
            </div>
        </div>
    </div>
</div>
