<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="review-tab-pro-inner">
        <ul id="myTab3" class="tab-review-design">
            <li><a disable='true'><i class="fa fa-tag" aria-hidden="true"></i> 1、选择产品目录</a></li>
            <li><a disable='true'><i class="fa fa-pencil" aria-hidden="true"></i> 2、填写产品(SPU)信息</a></li>
            <li class="active"><a disable='true'><i class="fa fa-ticket" aria-hidden="true"></i> 3、添加商品(SKU)</a></li>
        </ul>
        <div id="myTabContent" class="tab-content custom-product-edit">
            <% form_for @sku, url(:spus, :create_sku, :id => @spu.id), :class=>"form-horizontal", :method => 'post', multipart: true do |f| %>
            <%=f.hidden_field "t_spu_id" %>
            <%=f.hidden_field "merchant_id" %>
            <div class="form-group-inner">
                <div class="row">
                    <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
                        <label class="login2 pull-right pull-right-pro">商品标题*</label>
                    </div>
                    <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-select-list">
                          <%=f.text_field(:title, :class => "form-control", :required => true)%>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group-inner">
                <div class="row">
                    <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
                        <label class="login2 pull-right pull-right-pro">商品图片*</label>
                    </div>
                    <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-select-list">
                          <%=f.file_field(:images, :class => "form-control", multiple: true, :required => true)%>
                        </div>
                    </div>

                </div>
            </div>
            <div class="form-group-inner">
                <div class="row">
                    <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
                        <label class="login2 pull-right pull-right-pro">SKU代码</label>
                    </div>
                    <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-select-list">
                          <%=f.text_field(:sku_code, :class => "form-control")%>
                        </div>
                    </div>

                </div>
            </div>
            <div class="form-group-inner  input-with-warning">
                <div class="row">
                    <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
                        <label class="login2 pull-right pull-right-pro">描述属性</label>
                    </div>
                    <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">

                        <% @attrs.where(selling: false).each do |tattr|%>
                        <div class="col-lg-2 col-md-12 col-sm-12 col-xs-12">
                            <label class="login2 pull-right pull-right-pro"><%=tattr.name%></label>
                        </div>
                        <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-select-list">
                              <% attrvalues = TAttrvalue.where(t_attribute_id: tattr.id)%>
                              <% if attrvalues.count > 0 %>
                                <%=select_tag(tattr.name, :options => attrvalues.map(&:value), :class => "form-control custom-select-value")%>
                              <% else %>
                                <%=text_field_tag(tattr.name, :class => "form-control")%>
                              <% end %>
                            </div>
                        </div>
                        <% end %>
                    </div>
                </div>
            </div>
            <div class="form-group-inner  input-with-error">
                <div class="row">
                    <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
                        <label class="login2 pull-right pull-right-pro">销售属性*</label>
                    </div>
                    <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">

                        <% @attrs.where(selling: true).each do |tattr|%>
                        <div class="col-lg-2 col-md-12 col-sm-12 col-xs-12">
                            <label class="login2 pull-right pull-right-pro"><%=tattr.name%></label>
                        </div>
                        <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-select-list">
                              <% attrvalues = TAttrvalue.where(t_attribute_id: tattr.id)%>
                              <% if attrvalues.count > 0 %>
                                <%=select_tag(tattr.name, :options => attrvalues.map{|av| "#{av.value}#{tattr.unit}"}, :class => "form-control custom-select-value")%>
                              <% else %>
                                <%=text_field_tag(tattr.name, :class => "form-control", :required => true)%>
                              <% end %>
                            </div>
                        </div>
                        <% end %>
                    </div>
                </div>
            </div>
            <div class="form-group-inner">
                <div class="row">
                    <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
                        <label class="login2 pull-right pull-right-pro">价格*</label>
                    </div>
                    <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-select-list">
                          <%=f.text_field(:price, :class => "form-control", :required => true)%>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group-inner">
                <div class="row">
                    <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
                        <label class="login2 pull-right pull-right-pro">库存*</label>
                    </div>
                    <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-select-list">
                          <%=f.text_field(:stock_num, :class => "form-control", :required => true)%>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group-inner">
                <div class="row">
                    <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
                        <label class="login2 pull-right pull-right-pro">商品详情图片</label>
                    </div>
                    <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-select-list">
                          <%=f.file_field(:detail, :class => "form-control", multiple: true)%>
                        </div>
                    </div>

                </div>
            </div>
            <div class="form-group-inner">
              <div class="row">
                  <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                      <label class="login2 pull-right pull-right-pro">可选服务 </label>
                  </div>
                  <div class="col-lg-9 col-md-6 col-sm-6 col-xs-12">
                      <div class="bt-df-checkbox pull-left">
                          <div class="row">
                              <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                  <div class="i-checks pull-left">
                                      <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
                                        <label><input type="checkbox" name="service[]" value="install"> <i></i> 到店安装 </label>
                                      </div>
                                      <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                                        <input type="text" name="install_fee" class="form-control" placeholder="服务费用">
                                      </div>
                                  </div>

                              </div>
                          </div>
                          <div class="row">
                              <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                  <div class="i-checks pull-left">
                                    <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
                                      <label><input type="checkbox" name="service[]" value="noinstall"> <i></i> 无需安装 </label>
                                    </div>
                                    <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                                      <input type="text" name="noinstall_fee" class="form-control" placeholder="服务费用">
                                    </div>
                                  </div>
                              </div>
                          </div>
                      </div>
                  </div>

              </div>
            </div>
            <div class="form-group-inner">
                <div class="login-btn-inner">
                    <div class="row">
                        <div class="col-lg-3"></div>
                        <div class="col-lg-9">
                            <div class="login-horizental cancel-wp pull-left">
                                <%=f.submit "提交并继续添加SKU", :class => "btn btn-sm btn-primary login-submit-cs"%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>
