<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="review-tab-pro-inner">
        <ul id="myTab3" class="tab-review-design">
            <li class="active"><a disable='true'><i class="fa fa-pencil" aria-hidden="true"></i> 修改产品(SPU)信息</a></li>
        </ul>
        <div id="myTabContent" class="tab-content custom-product-edit">
            <% form_for @spu, url(:spus, :update, :id => @spu.id), :class=>"form-horizontal", :method => 'post' do |f| %>
            <div class="product-tab-list tab-pane fade active in">
              <%=f.hidden_field "t_category_id" %>
              <%=f.hidden_field "merchant_id" %>
              <div class="form-group-inner">
                  <div class="row">
                      <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
                          <label class="login2 pull-right pull-right-pro">选择品牌*</label>
                      </div>
                      <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                          <div class="form-select-list">
                            <%=f.select(:t_brand_id, :options => @brands.map{|brand| [brand.name, brand.id]}.unshift([nil,nil]), :class => "form-control custom-select-value")%>
                          </div>
                      </div>
                  </div>
              </div>
              <div class="form-group-inner">
                  <div class="row">
                      <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
                          <label class="login2 pull-right pull-right-pro">产品标题*</label>
                      </div>
                      <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                          <div class="form-select-list">
                            <%=f.text_field(:title, :class => "form-control")%>
                          </div>
                      </div>
                  </div>
              </div>
              <div class="form-group-inner">
                  <div class="row">
                      <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
                          <label class="login2 pull-right pull-right-pro">产品说明</label>
                      </div>
                      <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                          <div class="form-select-list">
                            <%=f.text_field(:detail, :class => "form-control")%>
                          </div>
                      </div>
                  </div>
              </div>
              <div class="form-group-inner">
                  <div class="row">
                      <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
                          <label class="login2 pull-right pull-right-pro">商品分销佣金比例</label>
                      </div>
                      <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                          <div class="form-select-list">
                            <%=f.text_field(:dist_percent, :class => "form-control")%>
                          </div>
                      </div>
                  </div>
              </div>
              <div class="form-group-inner">
                  <div class="row">
                      <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
                          <label class="login2 pull-right pull-right-pro">产品详情图片</label>
                      </div>
                      <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                          <div class="form-select-list">
                            <%=f.file_field(:details, :class => "form-control", multiple: true)%>
                          </div>
                      </div>

                  </div>
              </div>
              <% if @spu.details.present? %>
              <div class="form-group-inner">
                <div class="row">
                    <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
                        <label class="login2 pull-right pull-right-pro"></label>
                    </div>
                    <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                      <a href="<%=url(:spus, :ordering_imgs, :id=>@spu.id)%>">调整图片顺序</a>
                    </div>
                </div>
                  <% i = 1%>
                  <% @spu.details.each do |detail|%>
                  <div class="row">
                      <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
                          <label class="login2 pull-right pull-right-pro">已上传图片<%=i%></label>
                      </div>
                      <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                        <img src="<%=detail.url%>">
                      </div>
                  </div>
                  <% i += 1%>
                  <% end %>
              </div>
              <% end %>
              <div class="form-group-inner">
                  <div class="login-btn-inner">
                      <div class="row">
                          <div class="col-lg-3"></div>
                          <div class="col-lg-9">
                              <div class="login-horizental cancel-wp pull-left">
                                  <a href="<%=url(:spus, :index)%>" class="btn btn-warning" style="border-radius: 0px;background-color: #ccc;border-color: #ccc;">返回</a>
                                  <%=f.submit "提交", :class => "btn btn-sm btn-primary login-submit-cs"%>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
            </div>

            <% end %>
        </div>
    </div>
</div>
