<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="product-status-wrap">
        <h4>产品(SPU)列表</h4>
        <div class="add-product">
            <a href="<%=url(:spus, :select_category)%>">新增产品(SPU)</a>
        </div>
        <table>
            <tr>
                <th style="width: 15%;">目录</th>
                <th style="width: 10%;">品牌</th>
                <th style="width: 23%;">标题</th>
                <th style="width: 10%;">可销售?</th>
                <th style="width: 20%;">说明</th>
                <th style="width: 10%;">SKU数量</th>
                <th style="width: 10%;"></th>
            </tr>
            <% @spus.each do |spu| %>
            <tr>
                <td><%= spu.category_desc%></td>
                <td><%= spu.t_brand.name if spu.t_brand %></td>
                <td><%= spu.title %></td>
                <td>
                    <button class="<%= spu.saleable_class%>"><%= spu.saleable_desc%></button>
                </td>
                <td><%= spu.detail %></td>
                <td><%= spu.t_skus.count %></td>
                <td>
                    <a href="<%=url(:spus, :edit, :id =>spu.id) %>" title="修改" class="pd-setting-ed" style="margin-right: 5px;"><i class="fa fa-pencil" aria-hidden="true"></i></a>

                    <a href="<%=url(:spus, :show, :id =>spu.id)%>" title="查看SKU" class="pd-setting-ed" style="margin-right: 5px;"><i class="fa fa-info-circle" aria-hidden="true"></i></a>

                    <% if spu.saleable %>
                    <a href="<%=url(:spus, :change_sale, :id =>spu.id, :action =>'offsale')%>" title="下架" class="pd-setting-ed"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                    <% else %>
                    <a href="<%=url(:spus, :change_sale, :id =>spu.id, :action =>'onsale')%>" title="上架" class="pd-setting-ed"><i class="fa fa-check" aria-hidden="true"></i></a>
                    <% end %>
                </td>
            </tr>
            <% end %>

        </table>
        <%= will_paginate @spus %>

    </div>
</div>
