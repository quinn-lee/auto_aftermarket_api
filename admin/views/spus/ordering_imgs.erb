<div class="card">
    <div class="card-title">
        <h4 class="underline">按次序点击图片</h4>
    </div>

    <% form_for @spu, url(:spus, :reorder_details, :id => @spu.id), :method => :post do |f| %>
        <%= hidden_field_tag :'_seq_' %>

        <div class="image-preview">
            <% @spu.details.each_with_index do |detail, index| %>
                <div>
                    <%= content_tag :div, nil, :class => 'thumbnail-filter', :id => "filter_#{index}" %>
                    <%= image_tag detail.url, :class => 'thumbnail' %>
                </div>
            <% end %>
        </div>

        <div align="center">
            <%= link_to '返回', url(:spus, :edit, :id => @spu.id), :class => 'btn btn-back' %>
            <%= f.submit '提交', :class => 'btn btn-submit', :id => 'filter_submit', :disabled => true %>
        </div>
    <% end %>
</div>


