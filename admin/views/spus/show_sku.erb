<div class="col-lg-5 col-md-5 col-sm-5 col-xs-12">
    <div id="myTabContent1" class="tab-content">
        <% i = 1%>
        <% @sku.images.each do |image| %>
        <div class="product-tab-list tab-pane fade <%= i==1 ? 'active' : ''%> in" id="single-tab<%=i%>">
            <img src="<%=image.url%>" alt="" />
        </div>
        <% i += 1%>
        <% end %>
    </div>
    <ul id="single-product-tab">
        <% i = 1%>
        <% @sku.images.each do |image| %>
        <li class="<%= i==1 ? 'active' : ''%>">
            <a href="#single-tab<%=i%>"><img src="<%=image.url%>" alt="" /></a>
        </li>
        <% i += 1%>
        <% end %>
    </ul>
</div>
<div class="col-lg-7 col-md-7 col-sm-7 col-xs-12">
    <div class="single-product-details res-pro-tb">
        <h1><%= @sku.title %></h1>
        <span class="single-pro-star"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></span>
        <div class="single-pro-price">
            <span class="single-regular">￥<%=@sku.price%></span>
        </div>
        <% @sku.sale_attrs.to_a.each do |sa|%>
        <div class="single-pro-size">
            <h6 style="display: inline; margin-right: 20px;"><%=sa[0]%></h6>
            <span><%=sa[1]%></span>
        </div>
        <% end %>
        <% if @sku.service_fee.present? %>
        <div class="single-pro-size">
            <h6 style="display: inline; margin-right: 20px;">可选服务</h6>
            <% @sku.service_fee.each do |k,v|%>
              <span><%="#{k}：￥#{v}"%></span>
            <% end %>
        </div>
        <% end %>

    </div>
</div>




<div class="single-pro-review-area mt-t-30 mg-b-15">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin-top: 30px;">
                <ul id="myTab" class="tab-review-design">
                    <li class="active" style="margin-right: 20px;"><a href="#description">商品描述</a></li>
                    <li><a href="#INFORMATION">规格</a></li>
                </ul>
                <div id="myTabContent" class="tab-content">
                    <div class="product-tab-list product-details-ect tab-pane fade active in" id="description">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="review-content-section">
                                    <% if @sku.detail.present? %>
                                      <% @sku.detail.each do |detail| %>
                                        <img src="<%=detail.url%>" alt="" />
                                      <% end %>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="product-tab-list tab-pane fade" id="INFORMATION">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="review-content-section">
                                  <% @sku.attrs.to_a.each do |sa|%>
                                  <div class="single-pro-size">
                                      <h6 style="display: inline; margin-right: 20px;"><%=sa[0]%></h6>
                                      <span><%=sa[1]%></span>
                                  </div>
                                  <% end %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
